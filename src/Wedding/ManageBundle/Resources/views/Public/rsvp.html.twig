{% extends 'WeddingManageBundle:Shared:layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <br><br>
            <legend><h3 class="wedding">RSVP</h3></legend>
            <center>
                <h4>
                    We look forward to celebrating with you!
                    <br>
                    Please respond by April 2015.
                </h4>
            </center>
            <br>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        {{ form_label(form.response) }}
                    </label>
                    <div class="col-sm-9">
                        {{ form_widget(form.response) }}
                        <span class="red-error">
                            {{ form_errors(form.response) }}
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        {{ form_label(form.name) }}
                    </label>
                    <div class="col-sm-9">
                        {{ form_widget(form.name) }}
                        <span class="red-error">
                            {{ form_errors(form.name) }}
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        {{ form_label(form.phone) }}
                    </label>
                    <div class="col-sm-9">
                        {{ form_widget(form.phone) }}
                    </div>
                </div>
                <div style="{% if not form_errors(form.number) %}display: none;{% endif %}" id="rsvp-number-div">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            {{ form_label(form.number) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(form.number) }}
                            <span class="red-error">
                                {{ form_errors(form.number) }}
                            </span>
                        </div>
                    </div>
                </div>
                <button class="pull-right btn btn-success">
                    Submit RSVP
                </button>
            {{ form_end(form) }}
        </div>
    </div>
    <br><br>
    {% include 'WeddingManageBundle:Shared:footer.html.twig' %}
{% endblock %}
