{% extends 'WeddingManageBundle:Shared:layout.html.twig' %}

{% block content %}
    <br><br>
    <legend class="col-lg-12">
        <h3 class="wedding">
            <small class="pull-right">
                Yes Responses:
                {{ yesCounter ~ '/' ~ totalCounter }}
            </small>
            <small class="pull-right" style="margin-right: 20px;">
                Total Guests:
                {{ guestCounter }}
            </small>
            Responses
        </h3>
    </legend>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <th class="col-sm-3">Name</th>
                    <th class="col-sm-2">Phone</th>
                    <th class="col-sm-2"># Attending</th>
                    <th class="col-sm-2">Response</th>
                    <th class="col-sm-3">Time</th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody>
                    {% for rsvp in rsvpResult %}
                        <tr>
                            <td>{{ rsvp.name }}</td>
                            <td>{{ rsvp.phone }}</td>
                            <td>{{ rsvp.number }}</td>
                            <td>{{ rsvp.response }}</td>
                            <td>{{ rsvp.createdAt|date('m-d-Y h:ia') }}</td>
                            <td>
                                <a href="{{ path('admin_rsvp_edit', {'rsvp': rsvp.id}) }}" class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin_rsvp_remove', {'rsvp': rsvp.id}) }}" class="btn btn-xs btn-danger">
                                    Remove
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <br><br>
{% endblock %}
